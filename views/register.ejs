<% include ./partials/header.ejs %>
<div class=" w-full h-screen bg-zinc-300 bg-center bg-cover flex items-center justify-center ">
    <div class="w-[28vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center mb-5 font-semibold text-zinc-700 tracking-tighter capitalize leading node">Create new Account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="password" placeholder="password">
        <input class="border-2 rounded-full mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create new account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection
        </p>
      </form>
      <a class = "inline-block mt-7 w-full text-sm font-semibold text-zinc-700 text-center" href="/">Login Existing Account</a>
    </div>

  </div>
<% include ./partials/footer.ejs %>